<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="../../../tests/Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="service">
            <directory>./Service</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
            <exclude>
                <directory suffix=".phtml">../src</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
